@model VCAS.Models.VCAS_reports

@{
    ViewBag.Title = "Edit Reports Page";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <div class="grid" style="background: #FFFFFF; border-radius: 10px; width: 100%; padding: 20px;">
            <div class="row">
                <div class="cell-12">

                    <h2 class="fg-darkGray">@Html.ActionLink("<< Back", null, null, null, new { href = Request.UrlReferrer }) Edit:: Reports Page</h2>
                    <hr class="bg-gray" />
                    @Html.ValidationSummary(true, "", new { @class = "fg-magenta" })
                    @Html.HiddenFor(model => model.Id)

                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { data_role = "input", data_prepend = "Name: " } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "fg-magenta" })
                    @Html.EditorFor(model => model.desc, new { htmlAttributes = new { data_role = "input", data_prepend = "Description: " } })
                    @Html.ValidationMessageFor(model => model.desc, "", new { @class = "fg-magenta" })
                    <br />
                    <label>User role:</label>
                    @Html.DropDownList("FK_REF_userRolesId", null, htmlAttributes: new { data_role = "select" })
                    @Html.ValidationMessageFor(model => model.FK_REF_userRolesId, "", new { @class = "fg-magenta" })
                    <br />
                    <label>Parameter Check:</label>
                    @Html.CheckBoxFor(model => model.paramCheck, new { data_role = "checkbox", data_style = "2" })
                    @Html.ValidationMessageFor(model => model.paramCheck, "", new { @class = "fg-magenta" })

                    <input type="submit" value="Save" class="button yellow" style="width: 100%;" />
                </div>
            </div>
        </div>
    </div>
}


