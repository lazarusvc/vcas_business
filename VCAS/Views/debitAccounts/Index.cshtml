@model IEnumerable<VCAS.Models.VCAS_debitAccounts>

@{
    ViewBag.Title = "Index";
}

<h2 class="fg-darkGray">Charts of Accounts:: Index</h2>
<a href="@Url.Action("Create")" class="image-button success" style="text-decoration: none !important;">
    <span class="mif-chevron-thin-right icon"></span>
    <span class="caption">Create New</span>
</a>
<br />
<br />
<table class="table striped table-border cell-border row-border compact bg-white" data-role="table" data-horizontal-scroll="true">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.acctNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remittance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.payee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VCAS_REF_payment_type.name)
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.acctNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.remittance).ToString().Substring(0, 10)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VCAS_REF_payment_type.name)
            </td>
            <td>
                <ul class="pagination no-gap size-large">
                    <li class="page-item">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="button info"><span class="mif-pencil icon"></span></a>
                    </li>
                    <li class="page-item">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="button primary"><span class="mif-document-file-pdf icon"></span></a>
                    </li>
                    <li class="page-item">
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="button alert"><span class="mif-bin icon"></span></a>
                    </li>
                </ul>
            </td>
        </tr>
    </tbody>
    }

</table>
